[Unit]
Description=IPO check (run once at 12:45 Nepal time)
After=network.target

[Service]
Type=oneshot
User=IPO_USER
WorkingDirectory=IPO_PROJECT_DIR
Environment="PATH=IPO_PROJECT_DIR/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/usr/bin/env python3 IPO_PROJECT_DIR/src/scheduler/run_once.py
StandardOutput=journal
StandardError=journal
